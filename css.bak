.fade-enter-active,
.fade-leave-active {
  transition: opacity 0.5s;
}

.fade-enter,
.fade-leave-to /* .fade-leave-active in <2.1.8 */ {
  opacity: 0;
}

.hidden {
  display: none;
}

.card {
  cursor: pointer;
  transition: transform 0.2s, background-color 0.2s, border-color 0.2s;
  border-width: 2px;
  display: flex;
  align-items: center;
  position: relative;
}

.card:hover {
  transform: scale(1.05);
  border-color: #4299e1;
}

.card-selected {
  border-color: #4299e1;
  background-color: #ebf8ff;
}

.card-disabled {
  opacity: 0.6;
  cursor: not-allowed;
  border-color: #e2e8f0;
  background-color: #f7fafc;
}

.card-icon {
  margin-right: 1rem;
  font-size: 1.5rem;
}

.chip {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  background-color: #edf2f7;
  color: #718096;
  padding: 0.25rem 0.5rem;
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
}

.dropdown {
  width: 100%;
  padding: 0.5rem;
  border: 1px solid #cbd5e0;
  border-radius: 0.375rem;
  background-color: #fff;
  margin-top: 1rem;
}

.option-support-text {
  display: block;
  font-size: 0.875rem;
  color: #718096;
}
